<h1>Item List</h1>

<li><a href='/splat/create'>Create item</a></li>

<table>
  <thead>
    <th>
      ID
    </th>
    <th>
      Name
    </th>
    <th>
      quantity
    </th>
    <th>
      Edit?
    </th>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.quantity %>
        </td>
        <td>
          <a href='/splat/edit/<%= item.id %>'>Edit</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
